{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "src/main.ts"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "types": ["node", "svelte"],
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"]
    },
    "alwaysStrict": true,
    "noImplicitAny": true
  }
}